<div class="row">
<div class="col-md-2"></div>

<div class="col-md-8">
<p id="notice"></p>

<div class="well">
<h3>Sonda: <%= @poll.name %></h3>
<hr>
<p>
  <strong>Opis:</strong> <%=raw @poll.descr %>
</p>
<dl class="dl-horizontal">
  <dt>Autor:</dt>
  <dd><%= @poll.author %></dd>
  <dt>Data utworzenia:</dt>
  <dd><%= dateformat(@poll.created_at) %></dd>
  <dt>Data zakończenia:</dt>
  <dd><%= @poll.ends_at ? dateformat(@poll.ends_at) : "brak" %></dd>
</dl>

<p class="text-center">
<%= link_to 'Wypełnij', vote_poll_path(@poll), method: 'get', class:"btn btn-success"%>
</p>
<hr>
<p class="text-center"><%= link_to 'Powrót', polls_path %> | <%= link_to "Pokaż szczegóły", detail_poll_path(@poll) %></p>
</div>

</div>

<div class="col-md-2"></div>
</div>
<h1>Listing surveys</h1>

<%= link_to 'New Survey', new_survey_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Descr</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.descr %></td>
        <td><%= survey.author %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Vote', vote_poll_path(survey.polls.first), method: 'get', class:"btn btn-success" if survey.polls.present?%></td>
      </tr>
    <% end %>
  </tbody>
</table>
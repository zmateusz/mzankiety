<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @survey.name %>
</p>

<p>
  <strong>Descr:</strong>
  <%= @survey.descr %>
</p>

<p>
  <strong>Author:</strong>
  <%= @survey.author %>
</p>

<p><h3>Questions</h3>
<ul>
<% @survey.polls.each do |poll| %>
  <li>
    <%= poll.name %>
  </li>
<% end %>
</ul></p>

<h3>Add a question:</h3>
<%= form_for([@survey, @survey.polls.build]) do |f| %>
  <div class="form-group"> 
  <div class="field" style="width:80%">
    <%= f.label :name %><br>
    <%= f.text_field :name , class: "form-control", :value => Faker::Company.catch_phrase %>
  </div>
  <div class="field" style="width:80%">
    <%= f.label :opis %><br>
    <%= f.text_area :descr , class: "form-control", :value => Faker::Lorem.sentence%>
  </div>
  <div class="field" style="width:30%">
    <%= f.label 'Type' %><br>
    <select multiple class="form-control" name="poll[typ]" id="poll_typ">
    <option value="Radio">Radio</option>
    <option value="Checkbox">Checkbox</option>
    <option value="Text">Text</option>
    </select>
  </div>
  <%= hidden_field_tag(:survey_id, @survey.id) %>
  </div>
  <div class="actions">
    <%= f.submit "Wyslij", class: "btn btn-primary"%>
  </div>
<% end %>


<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>

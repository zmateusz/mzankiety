<%= simple_form_for(@survey) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label :name, "Nazwa" %><br>
    <%= f.text_field :name, class: "form-control", style: "width:80%"%>
    <%= f.label :descr, "Opis" %><br>
    <%= f.text_area :descr, class: "form-control", style: "width:80%" %>
  </div>

  <div class="form-actions">
    <br><%= f.button :submit, value: "Zapisz", class: "btn btn-success" %>
  </div>
<% end %>

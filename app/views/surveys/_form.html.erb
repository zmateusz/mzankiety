
<%= simple_form_for(@survey) do |f| %>
  <h4><%= f.error_notification %></h4>
  <% @survey.errors.full_messages.each do |message| %>
    <span class="text-danger"><%= message %></span><br>
  <% end %><br>

  <div class="form-inputs">
    <%= f.label :name, "Nazwa" %><br>
    <%= f.text_field :name, class: "form-control", style: "width:100%"%>
    <%= f.label :descr, "Opis" %><br>
    <%= f.text_area :descr, class: "form-control", style: "width:100%" %>
  </div>

  <div class="form-actions">
    <br><%= f.button :submit, value: "Zapisz", class: "btn btn-success" %>
  </div>
<% end %>

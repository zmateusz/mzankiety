<div class="row">

  <div class="col-md-8 col-md-offset-2">
    <h4>Wyniki dla ankiety:</h4>
    <h4><%= @survey.name %></h4>

<div role="tabpanel">
  <!-- Nav tabs nav-stacked, nav-pills or nav-tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#stats" aria-controls="stats" role="tab" data-toggle="tab">Pytania</a></li>
    <li role="presentation"><%= link_to "GÅ‚osy", votes_survey_path(@survey) %></li>
    <li role="presentation"><%= link_to "Statystyki", stats_survey_path(@survey) %></li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="result">
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Pytanie</th>
            <th>Typ</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= typeinfo(poll.typ) %></td>
              <td><%= link_to 'Wyniki', result_poll_path(poll), class:"btn btn-success" unless poll.typ == "Info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

  </div>
</div>